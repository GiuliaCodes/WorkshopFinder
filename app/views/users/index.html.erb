<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Email</th>
      <th> Roles </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td>
          <% if user.is_admin? %> admin <%end %>
          <% if user.is_user? %> user <%end %>
          <% if user.is_partecipant? %> partecipant <%end %>
          <% if user.is_organizer? %> organizer <%end %> 
        </td>

        <% if user_signed_in? && current_user==user %> 
          <td><%= link_to 'Show', user %></td>
          <td> <%= link_to 'Edit Profile', edit_user_registration_path(user) %></td>
        <% end %>
        
        <% if can? :destroy, User %>
        <td><%= button_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>

        </tr>
    <% end %>
  </tbody>
</table>

