<p id="notice"><%= notice %></p>

<h1>Reviews for <%= @workshop.name  %></h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Author</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= review.description %></td>
        <td><%= User.find( review.user_id).username %></td>

        <td><%= link_to 'Show Review', workshop_review_path(@workshop, review) %></td>
        <% if  !current_user.nil? && current_user.id == review.user_id %>
          <td><%= link_to 'Edit', edit_workshop_review_path(review.workshop, review) %></td>
        <% end %>
        <td><%= button_to 'Destroy', workshop_review_path(@workshop, review), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      
        </tr>
    <% end %>
  </tbody>
</table>

<br>


<%= link_to 'Leave a review', new_workshop_review_path %> |
<%= link_to 'Back to Workshop', workshop_path(@workshop) %>

